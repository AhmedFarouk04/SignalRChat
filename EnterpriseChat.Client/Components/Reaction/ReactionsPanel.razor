@using EnterpriseChat.Client.Models
@using EnterpriseChat.Domain.Enums

<div class="reactions-panel">
    <div class="reaction-actions">
        @foreach (var reaction in AvailableReactions)
        {
            <button class="reaction-btn @(IsSelected(reaction) ? "selected" : "")"
                    type="button"
                    @onmousedown="() => OnReactionClick(reaction)"
                    title="@GetReactionName(reaction)"
                    style="font-family: 'Segoe UI Emoji', 'Apple Color Emoji', sans-serif; font-size: 22px;">
                @GetReactionEmoji(reaction)
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public Guid MessageId { get; set; }
    [Parameter] public MessageReactionsModel? Reactions { get; set; }

    [Parameter] public EventCallback<ReactionPayload> OnReaction { get; set; }

    private async Task OnReactionClick(ReactionType type)
    {
        await OnReaction.InvokeAsync(new ReactionPayload
        {
            MessageId = MessageId,
            Type = type
        });
    }

    private List<ReactionType> AvailableReactions => new()
{
    ReactionType.Like,
    ReactionType.Love,
    ReactionType.Laugh,
    ReactionType.Wow,
    ReactionType.Sad,
    ReactionType.Angry,
    ReactionType.ThumbsDown,
    ReactionType.Fire,
    ReactionType.Party,
    ReactionType.Clap,
    ReactionType.Pray
};


    private bool IsSelected(ReactionType type) => Reactions?.CurrentUserReactionType == type;

    private string GetReactionEmoji(ReactionType type) => type switch
    {
        ReactionType.Like => "👍",
        ReactionType.Love => "❤️",
        ReactionType.Laugh => "😂",
        ReactionType.Wow => "😮",
        ReactionType.Sad => "😢",
        ReactionType.Angry => "😠",
        ReactionType.ThumbsUp => "👍",
        ReactionType.ThumbsDown => "👎",
        ReactionType.Fire => "🔥",
        ReactionType.Party => "🎉",
        ReactionType.Clap => "👏",
        ReactionType.Pray => "🙏",
        _ => "❓"
    };

    private string GetReactionName(ReactionType type) => type.ToString();
}