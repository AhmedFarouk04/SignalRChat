@page "/users"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using EnterpriseChat.Application.DTOs
@using EnterpriseChat.Client.Services.Http
@using EnterpriseChat.Client.Services.Ui
@using EnterpriseChat.Client.Authentication.Abstractions
@inject UsersApi UsersApi
@inject ChatApi ChatApi
@inject NavigationManager Nav
@inject ToastService Toasts
@inject ICurrentUser CurrentUser

<div class="rooms-page">
    <div class="rooms-header">
        <h2 class="rooms-title">Users</h2>
    </div>

    <div class="rooms-toolbar">
        <input class="rooms-search"
               placeholder="Search users…"
               value="@q"
               @oninput="OnInput"
               autofocus />
    </div>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="auth-error">@error</div>
    }

    @if (loading)
    {
        <div class="rooms-empty">
            <div class="rooms-empty-sub">Searching…</div>
        </div>
    }
    else if (string.IsNullOrWhiteSpace(q))
    {
        <div class="rooms-empty">
            <div class="rooms-empty-title">Start a new chat</div>
            <div class="rooms-empty-sub">Search for a user then open a private room.</div>
        </div>
    }
    else if (results.Count == 0)
    {
        <div class="rooms-empty">
            <div class="rooms-empty-title">No results</div>
            <div class="rooms-empty-sub">Try another name.</div>
        </div>
    }
    else
    {
        <ul class="rooms-list">
            @foreach (var u in results)
            {
                <li class="user-row" @key="u.Id">
                    <div class="user-left">
                        <div class="user-avatar">@u.DisplayName[..1].ToUpper()</div>
                        <div class="user-main">
                            <div class="user-name">@u.DisplayName</div>
                            @if (!string.IsNullOrWhiteSpace(u.Email))
                            {
                                <div class="user-sub">@u.Email</div>
                            }
                        </div>
                    </div>
                    <button class="mini-btn" disabled="@busyStart" @onclick="() => StartPrivate(u.Id)">
                        Message
                    </button>
                </li>
            }
        </ul>
    }
</div>

@code {
    private string q = "";
    private bool loading;
    private bool busyStart;
    private string? error;
    private Guid _currentUserId;

    private readonly List<UserDirectoryItemDto> results = new();
    private CancellationTokenSource? cts;

    protected override async Task OnInitializedAsync()
    {
        var userId = await CurrentUser.GetUserIdAsync();
        _currentUserId = userId ?? Guid.Empty;
        Console.WriteLine($"[Users] CurrentUserId: {_currentUserId}");
    }

    private async Task OnInput(ChangeEventArgs e)
    {
        q = e.Value?.ToString() ?? "";
        Console.WriteLine($"[Users] Query changed to: '{q}'");

        await SearchDebouncedAsync();
    }

    private async Task SearchDebouncedAsync()
    {
        cts?.Cancel();
        cts?.Dispose();
        cts = new CancellationTokenSource();
        var token = cts.Token;

        if (string.IsNullOrWhiteSpace(q))
        {
            results.Clear();
            loading = false;
            error = null;
            await InvokeAsync(StateHasChanged);
            return;
        }

        // ✅ شيل الشرط بتاع Length < 2 عشان يبحث من أول حرف
        // if (q.Length < 2)
        // {
        //     results.Clear();
        //     loading = false;
        //     await InvokeAsync(StateHasChanged);
        //     return;
        // }

        loading = true;
        error = null;
        await InvokeAsync(StateHasChanged);

        try
        {
            await Task.Delay(300, token);
            token.ThrowIfCancellationRequested();

            var searchResults = await UsersApi.SearchAsync(q.Trim(), _currentUserId, 25, token);

            if (!token.IsCancellationRequested)
            {
                results.Clear();
                results.AddRange(searchResults);
                Console.WriteLine($"[Users] Found {results.Count} results for '{q}'");
            }
        }
        catch (OperationCanceledException)
        {
            Console.WriteLine("[Users] Search cancelled");
        }
        catch (Exception ex)
        {
            error = ex.Message;
            Console.WriteLine($"[Users] Search error: {ex.Message}");
        }
        finally
        {
            loading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task StartPrivate(Guid userId)
    {
        error = null;
        busyStart = true;
        await InvokeAsync(StateHasChanged);

        try
        {
            var dto = await ChatApi.GetOrCreatePrivateAsync(userId);
            if (dto == null)
            {
                error = "Could not create private room.";
                return;
            }

            Nav.NavigateTo($"/chat/{dto.Id}");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            busyStart = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}