    private async Task HandleToggleAdmin(Guid userId)
    {
        try
        {
            var user = VM.GroupMembers?.Members.FirstOrDefault(u => u.Id == userId);
            if (user == null) return;

            var isCurrentlyAdmin = user.IsAdmin;
            var userName = user.DisplayName;

            if (isCurrentlyAdmin)
            {
                await GroupsApi.DemoteAdminAsync(RoomId, userId);
                // 🚀 إرسال تحديث لكل الناس في الغرفة عبر SignalR
                await Realtime.NotifyMemberRoleChangedAsync(RoomId, userId, false);
                ShowToast($"{userName} Demoted from Admin");
            }
            else
            {
                await GroupsApi.PromoteAdminAsync(RoomId, userId);
                // 🚀 إرسال تحديث لكل الناس في الغرفة عبر SignalR
                await Realtime.NotifyMemberRoleChangedAsync(RoomId, userId, true);
                ShowToast($"{userName} Promoted to Admin");
            }

            // تحديث الحالة محلياً فوراً لضمان سرعة الاستجابة
            user.IsAdmin = !isCurrentlyAdmin;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}");
        }
