@page "/rooms"
@inject ApiClient Api
@inject NavigationManager Nav

<h2 class="page-title">Your Rooms</h2>

@if (rooms == null)
{
    <p class="loading">Loading rooms...</p>
}
else if (!rooms.Any())
{
    <p class="empty">No rooms yet</p>
}
else
{
    <ul class="room-list">
        @foreach (var room in rooms)
        {
            <li @onclick="() => Open(room.Id)">
                <span class="room-name">@room.Name</span>
            </li>
        }
    </ul>
}

@code {
    private IReadOnlyList<RoomModel>? rooms;

    protected override async Task OnInitializedAsync()
    {
        rooms = await Api.GetRoomsAsync();
    }

    private void Open(Guid id)
        => Nav.NavigateTo($"/chat/{id}");
}
